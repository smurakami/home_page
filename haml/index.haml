%body
  %section#header
    .constraint
      .name Shintaro Murakami
  %section#about
    .constraint
      .title
        %h2 About
      .property
        .name 村上晋太郎 / Shintaro Murakami
        %div 東京大学工学部電子情報工学科卒
        %div 東京大学大学院情報理工学系研究科
        %div 佐藤洋一研究室所属 修士一年
  %section#skill
    .constraint
      .title
        %h2 Skill
      .subtitle
        %h3 Programming
      %ul#skill-programming
        %li
          .skill-name Python
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 90%;"}
        %li
          .skill-name JavaScript
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 90%;"}
        %li
          .skill-name Objective-C
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 90%;"}
        %li
          .skill-name C
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 70%;"}
        %li
          .skill-name C++
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 70%;"}
        %li
          .skill-name Ruby
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 60%;"}
        %li
          .skill-name HTML
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 60%;"}
        %li
          .skill-name CSS
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 50%;"}
        %li
          .skill-name PHP
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 40%;"}
        %li
          .skill-name Haskell
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 30%;"}
        %li
          .skill-name C-LISP
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 20%;"}
        %li
          .skill-name SHELL-GEI
          .progress-bar.stripes.animate-stripes.blue
            %span{style: "width: 95%;"}
      .subtitle
        %h3 Research
      %ul#skill-research
        %li
          .skill-name Natural Language Processing
          .progress-bar.stripes.animate-stripes.yellow
            %span{style: "width: 75%;"}
        %li
          .skill-name Computer Vision
          .progress-bar.stripes.animate-stripes.yellow
            %span{style: "width: 30%;"}
        %li
          .skill-name Machine Learning
          .progress-bar.stripes.animate-stripes.yellow
            %span{style: "width: 30%;"}
      .subtitle
        %h3 Design
      %ul#skill-design
        %li
          .skill-name Drawing
          .progress-bar.stripes.animate-stripes.green
            %span{style: "width: 50%;"}
        %li
          .skill-name Photoshop
          .progress-bar.stripes.animate-stripes.green
            %span{style: "width: 50%;"}
        %li
          .skill-name Illustrator
          .progress-bar.stripes.animate-stripes.green
            %span{style: "width: 50%;"}
      .subtitle
        %h3 Hobby
      %ul#skill-hobby
        %li
          .skill-name Trumpet
          .progress-bar.stripes.animate-stripes.red
            %span{style: "width: 75%;"}
          .skill-name Jazz
          .progress-bar.stripes.animate-stripes.red
            %span{style: "width: 40%;"}
          .skill-name Funk
          .progress-bar.stripes.animate-stripes.red
            %span{style: "width: 50%;"}

  %section#works
    .constraint
      .title
        %h2 Works

  %section#contact
    .constraint
      .title
        %h2 Contact

